extends ../layouts/main-layout.pug

block content 
    
    if services.length > 0

        .alert.alert-info.alert-dismissible.fade.show(role="alert")
            h4.alert-heading Periyodik Araç Bakımı
            p Periyodik bakımların yapılma süresi araç modeline göre değişir. Sıfır araçların periyodik bakımı 10 bin km ile 20 bin km arasında yapılır. Hibrit araçlarda da 15 bin km veya yılda bir kez yapılması gerekir. Dizel araçlarda ise bu ölçü 10 bin km'dir. 
            hr
            h6.mb-0 #{car.km + 10000} kilometrede bakıma gelmelisiniz.
            button(type="button" data-dismiss="alert" aria-label="Close").close
                span(aria-hidden="true") &times;
            
        

        table.table.table-striped
            thead
                tr
                    th(style="width:150px;") Plaka
                    th Servis Bilgisi
                    th(style="width:350px;") Tarih
            tbody
                each service in services
                    tr
                        
                        td #{service.carPlate}
                        td #{service.description}
                        td #{service.date}
            
    else
        h1 Henüz bir servis işlemi yoktur.                        