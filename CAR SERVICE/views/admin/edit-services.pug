extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/services" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="id" value=`${service._id}`)

        .form-group.row
            label(for="plate").col-sm-2.col-form-label Plaka
            .col-sm-10
                input.form-control#plate(type="text" name="plate" value=`${service.carPlate}` readonly)  

        .form-group.row
            label(for="description").col-sm-2.col-form-label İşlem Açıklaması
            .col-sm-10
                textarea.form-control(name="description", cols="30", rows="10") #{service.description}

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Kaydet").btn.btn-outline-info   

