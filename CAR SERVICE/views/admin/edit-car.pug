extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/cars" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="id" value=`${car._id}`)

        .form-group.row
            label(for="plate").col-sm-2.col-form-label Plaka
            .col-sm-10
                input.form-control#plate(type="text" name="plate" value=`${car.plate}`)  

        .form-group.row
            label(for="model").col-sm-2.col-form-label Model
            .col-sm-10
                input.form-control#model(type="text" name="model" value=`${car.model}`) 

        .form-group.row
            label(for="customer").col-sm-2.col-form-label Müşteri Bilgisi
            .col-sm-10
                input.form-control#customer(type="text" name="customer" value=`${car.customer}`)

        .form-group.row
            label(for="km").col-sm-2.col-form-label Kilometre
            .col-sm-10
                input.form-control#km(type="text" name="km" value=`${car.km}`)

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Kaydet").btn.btn-outline-info   

