extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action = "/admin/add-service" method= "POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="id" value=`${car._id}`)

        .form-group.row
            label(for="plate").col-sm-2.col-form-label Plaka
            .col-sm-10
                input.form-control#plate(type="text" name="plate" value=`${car.plate}`)  

        .form-group.row
            label(for="km").col-sm-2.col-form-label Güncel Kilometre
            .col-sm-10
                input.form-control#km(type="text" name="km")

        .form-group.row
            label(for="description").col-sm-2.col-form-label İşlem Açıklaması
            .col-sm-10
                textarea.form-control(name="description" cols="30" rows="10") 

        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="İşlemi Kaydet").btn.btn-info